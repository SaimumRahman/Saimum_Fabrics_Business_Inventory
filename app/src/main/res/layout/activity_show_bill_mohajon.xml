<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Mohajon.ShowBillMohajonActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_alignParentTop="true"
        android:id="@+id/r5"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:layout_width="44dp"
            android:layout_height="34dp"
            android:src="@drawable/search"
            android:layout_margin="10dp"
            android:id="@+id/search_icon"
            />

        <EditText
            android:id="@+id/search_Bill_ETM"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:hint="Dates"
            android:textColorHint="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/search_icon"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/search_Bill_ETM"
            android:id="@+id/search_bill_buttonM"
            android:text="Search"
            android:textColor="@color/black"

            android:textStyle="bold"
            android:textSize="16dp"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pleasetxtxM"
        android:textSize="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="#750303"
        android:layout_margin="10dp"
        android:layout_below="@+id/r5"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViewBillListM"
        android:layout_below="@+id/pleasetxtxM"
        >

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>