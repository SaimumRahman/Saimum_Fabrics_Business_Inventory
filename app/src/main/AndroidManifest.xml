<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.groceryapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroceryApplication">
        <activity android:name="PhoneBook.PhoneBookActivity"></activity>
        <activity android:name="Mohajon.ShowTotalMohajonActivity" />
        <activity android:name="Mohajon.ShowPaidAmountMohajonActivity" />
        <activity android:name="Mohajon.ShowBillMohajonActivity" />
        <activity android:name="Mohajon.MohajonActivityCalculation" />
        <activity android:name="Mohajon.MohajonActivity" />
        <activity android:name=".ShowtotalsActivity" />
        <activity android:name=".ShowPaidAmounts" />
        <activity android:name=".ShowBillActivity" />
        <activity android:name=".CalculationActivity" />
        <activity android:name=".Customer_Details" />
        <activity android:name=".AddCustomers" />
        <activity android:name=".SplashActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>